# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.WidgetController.index

# Widgets
GET     /widgets                    controllers.WidgetController.listWidgets
POST    /widgets                    controllers.WidgetController.createWidget

# Widgets using MessagesActionBuilder
GET     /messages-widgets           controllers.MessagesWidgetController.listWidgets
POST    /messages-widgets           controllers.MessagesWidgetController.createWidget


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
